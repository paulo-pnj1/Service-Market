{
  "expo": {
    "name": "ServiçoJá",
    "slug": "servicoja",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "servicoja",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.servicoja.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#FF6B35"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.servicoja.app"
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro",
      "pwa": {
        "name": "ServiçoJá",
        "shortName": "ServiçoJá",
        "description": "Marketplace de serviços locais em Angola",
        "themeColor": "#FF6B35",
        "backgroundColor": "#FFFFFF",
        "display": "standalone",
        "scope": "/",
        "startUrl": "/",
        "orientation": "portrait-primary",
        "icons": [
          {
            "src": "./assets/images/icon.png",
            "sizes": "192x192",
            "type": "image/png"
          },
          {
            "src": "./assets/images/icon.png",
            "sizes": "512x512",
            "type": "image/png"
          },
          {
            "src": "./assets/images/icon.png",
            "sizes": "any",
            "type": "image/png",
            "purpose": "maskable"
          }
        ]
      }
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FF6B35",
          "dark": {
            "backgroundColor": "#1A1A1A"
          }
        }
      ],
      "expo-web-browser",
      "expo-image-picker",
      "expo-media-library"
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}